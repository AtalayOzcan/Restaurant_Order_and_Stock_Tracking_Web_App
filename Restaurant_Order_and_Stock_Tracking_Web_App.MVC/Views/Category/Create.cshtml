@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/Views/Category/Create.css" rel="stylesheet" asp-append-version="true" />
}

<div class="form-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">➕ Yeni Kategori</h1>
        </div>
        <a asp-action="Index" class="btn btn-ghost">← Geri</a>
    </div>

    <div class="card">
        <form asp-action="Create" method="post" id="createForm">
            @Html.AntiForgeryToken()

            <div id="alertBox" class="alert alert-error" style="display:none;"></div>

            <div class="form-group">
                <label class="form-label">Kategori Adı *</label>
                <input type="text" name="categoryName" class="form-control" placeholder="örn. İçecekler" maxlength="100" required />
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Sıralama</label>
                    <input type="number" name="categorySortOrder" class="form-control" value="0" min="0" />
                </div>
                <div class="form-group" style="display:flex; flex-direction:column; justify-content:flex-end;">
                    <label class="form-label">Durum</label>
                    <div class="toggle-group">
                        <label class="toggle-switch">
                            <input type="checkbox" name="isActive" value="true" checked />
                            <span class="toggle-slider"></span>
                        </label>
                        <span>Aktif</span>
                    </div>
                </div>
            </div>

            <div style="display:flex; justify-content:flex-end; gap:.6rem; margin-top:1.5rem;">
                <a asp-action="Index" class="btn btn-ghost">İptal</a>
                <button type="submit" class="btn btn-primary">💾 Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Views/Category/Create.js" asp-append-version="true"></script>
}
