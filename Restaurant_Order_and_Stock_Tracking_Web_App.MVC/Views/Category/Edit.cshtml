@model Restaurant_Order_and_Stock_Tracking_Web_App.MVC.Models.Category
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/Views/Category/Edit.css" rel="stylesheet" asp-append-version="true" />
}
}

<div class="form-page">
    <div class="page-header">
        <div>
            <h1 class="page-title">✏️ Kategori Düzenle</h1>
        </div>
        <a asp-action="Index" class="btn btn-ghost">← Geri</a>
    </div>

    <div class="card">
        <form id="editForm">
            @Html.AntiForgeryToken()
            <input type="hidden" id="editId" value="@Model.CategoryId" />

            <div id="alertBox" class="alert alert-error" style="display:none;"></div>

            <div class="form-group">
                <label class="form-label">Kategori Adı *</label>
                <input type="text" id="categoryName" class="form-control" value="@Model.CategoryName" maxlength="100" required />
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Sıralama</label>
                    <input type="number" id="sortOrder" class="form-control" value="@Model.CategorySortOrder" min="0" />
                </div>
                <div class="form-group" style="display:flex; flex-direction:column; justify-content:flex-end;">
                    <label class="form-label">Durum</label>
                    <div class="toggle-group">
                        <label class="toggle-switch">
                            <input type="checkbox" id="isActive" @(Model.IsActive ? "checked" : "") />
                            <span class="toggle-slider"></span>
                        </label>
                        <span>Aktif</span>
                    </div>
                </div>
            </div>

            <div style="display:flex; justify-content:flex-end; gap:.6rem; margin-top:1.5rem;">
                <a asp-action="Index" class="btn btn-ghost">İptal</a>
                <button type="submit" class="btn btn-primary">💾 Güncelle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Views/Category/Edit.js" asp-append-version="true"></script>
}
